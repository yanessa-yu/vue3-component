{
    "compilerOptions": {
      "module": "ESNext",
      "outDir": "./dist",
      "declaration": true, //生成相应的 .d.ts文件
      "noImplicitAny": false,
      "removeComments": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "preserve",
      "noLib": false,
      "target": "es6",
      "sourceMap": true,
      "lib": [
        "ESNext", "DOM"
      ],
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "test"
    ]
   }
   